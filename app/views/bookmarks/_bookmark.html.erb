<% if post_summary.bookmarked_by?(current_user) %>
  <p>
    <span>
      <i class="fas fa-bookmark"></i>
    </span><%= link_to "ブックマーク解除", post_summary_bookmarks_path(post_summary), method: :delete, remote: true%>
  </p>
<% else %>
  <p>
    <span>
      <i class="far fa-bookmark"></i>
    </span><%= link_to "ブックマーク登録", %post_summary_bookmarks_path(post_summary), method: :post, remote: true%>
  </p>
<% end %>