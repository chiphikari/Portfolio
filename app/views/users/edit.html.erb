<% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
<%= form_with model:@user, local:true do |f| %>
<div class= "form-group">
  <label>プロフィール画像</label>
  <%= f.attachment_field :profile_image, autofocus: true, class: "form-control" %>

  <label>ユーザー名</label>
  <%= f.text_field :user_name, autofocus: true, class: "form-control" %>

  <label>メールドレス</label>
  <%= f.text_field :email, autofocus: true, class: "form-control" %>

  <%= f.submit '変更を保存する' %>
</div>
<% end %>

<%= link_to "退会する", unsubscribe_path %>