<div class="wrapper">
  <div class= "login">
    <p class="title">ログイン</p>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "登録したパスワード" %>
    </div>

    <!--< if devise_mapping.rememberable? %>-->
    <!--  <div class="field">-->
    <!--    <= f.check_box :remember_me %>-->
    <!--    <= f.label :remember_me %>-->
    <!--  </div>-->
    <!--< end %>-->

    <div class="actions">
      <button>
        <i class="spinner"></i>
        <span class="state">ログイン</span>
      </button>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>


