<% if reviews.present? %>
  <% reviews.each do |review| %>
    <%= review.user.user_name %>
    <%= attachment_image_tag review.user, :profile_image, format: 'jpeg', fallback: "noimage.jpg", size: "100x100" %>

    <p>評価</p>
    <%= review.score %>点

    <p>コメント</p>
    <%= review.content %>

    <!--星評価-->
     <div id="star-rate-<%= review.id %>"></div>
      <script>
      $('#star-rate-<%= review.id %>').raty({
        size: 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        half: true,
        readOnly: true,
        score: <%= review.score %>,
      });
      </script>

    <% if current_user == review.user %>
    <!--review.post_summary.idはアソシエーションしているのでこの書き方でOK-->
      <%= link_to '口コミを削除', post_summary_review_path(review.post_summary.id, review.id), method: :delete, class:'btn btn-default' %>
    <% end %>
  <% end %>
<% end %>