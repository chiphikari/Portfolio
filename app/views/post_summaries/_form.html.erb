<div class= "form-group">
    <label>タイトル</label>
    <%= f.text_field :title, class: "form-control", placeholder:"最大50文字まで" %>
</div>
<div class= "form-group">
    <label>画像 ※複数投稿も可能です</label>
    <%= f.attachment_field :post_images_images, multiple: true, class: "form-control"%>
</div>
<div class= "form-group">
    <label>見出し</label>
    <%= f.text_field :headline, class: "form-control", placeholder:"最大100文字まで" %>
</div>
<div class= "form-group">
    <label>紹介文</label>
    <%= f.text_area :introduction, class: "form-control", placeholder:"最大500文字まで" %>
</div>
<div class="form-group">
    <label>タグ ※#で区切ってください</label>
    <%= f.text_field :tag_name, value: @tag_list, placeholder:"#で区切ってください", class: "form-control" %>
</div>