<div class="container mx-auto pb-5" style="background-color: rgba( 255, 255, 255, 0.9 );">
  <% @post_summary.errors.full_messages.each do |message| %>
    <li style="color: red;"><%= message %></li>
  <% end %>
  <h3>編集</h3>
  <div class="row">
    <div class="col-md-6">
    <%= form_with model:@post_summary, local:true do |f| %>

      <%= render 'post_summaries/form', f:f %>

      <% if @post_summary.post_house.present? %>
        <%= f.fields_for :post_house do |s| %>
          <div class= "form-group">
            <label>リンク</label>
            <%= s.text_field :link, class: "form-control" %>
          </div>
        <% end %>
      <% end %>

      <% unless @post_summary.post_outside.blank? %>
        <%= render 'post_summaries/map', f:f %>
      <% end %>

      <%= f.submit "更新する", class: "btn btn-primary" %>

    <% end %>
    </div>
  </div>
</div>