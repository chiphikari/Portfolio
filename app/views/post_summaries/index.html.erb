<%= form_tag post_summaries_path, method: :get do %>
    <%= select_tag :search_flag, options_for_select({"いいね一覧" => "like", "投稿一覧" => "updated"}) %>
    <% if @category.nil? %>
        <%= hidden_field_tag 'category' %>
    <% else %>
        <%= hidden_field_tag 'category', @category %>
    <% end %>
    <input type="submit">
<% end %>

<div>
    <table class="table">
        <tbody>
            <tr><td><%= link_to "動画・映画", post_summaries_path(category: 0)%></td></tr>
            <tr><td><%= link_to "本・電子書籍", post_summaries_path(category: 1)%></td></tr>
            <tr><td><%= link_to "アクティビティ", post_summaries_path(category: 2)%></td></tr>
            <tr><td><%= link_to "おすすめスポット", post_summaries_path(category: 3)%></td></tr>
            <tr><td><%= link_to "隠れ喫茶店", post_summaries_path(category: 4)%></td></tr>
            <tr><td><%= link_to "おすすめ散歩", post_summaries_path(category: 5)%></td></tr>
        </tbody>
    </table>
</div>
<h1 class= "list">投稿一覧</h1>
<div class="container mx-auto" style="background-color: rgba( 255, 255, 255, 0.8 );">
    <div class="row">
        <% @post_summaries.each do |post| %>
        <div class="col-md-6">
            カテゴリー：<%= post.category %>
                <div class="slider">
                    <% if post.post_images.present? %>
                        <% post.post_images.each do |image| %>
                            <%= attachment_image_tag image, :image, fallback: "noimage.jpg"%>
                        <% end %>
                    <% else %>
                        <%= image_tag 'noimage.jpg', width: "200" %>
                    <% end %>
                </div>
        </div>
        <div class="col-md-6">
            <p><%= link_to post.title, post_summary_path(post.id) %></p>
            <p><%= post.headline %></p>
            <p><%= post.introduction.truncate(15) %></p>
            <p>いいね数：<%= post.favorites.count %></p>
            <p>投稿日：<%= post.created_at %></p>
        </div>
        <% end %>
        <%= paginate @post_summaries %>
    </div>
</div>


